{
  "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["DOM"]
  },
  "include": ["src/**/*"]
}